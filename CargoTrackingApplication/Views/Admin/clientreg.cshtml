
@{
    ViewBag.Title = "clientreg";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@Html.Partial("_AdminHeader")

<!--main content begins -->
<div class="ed_transprentbg ed_toppadder90 ed_bottompadder90" style="back">
    <div class="container content">
        <div class="row">
            <!-- left side bar for quick links -->
            <div class="col-lg-3 col-md-3 col-sm-3 adminsidebar">
                <h3 style="font-weight: bolder;COLOR:#FFF;">QUICK LINKS</h3>
                
                @Html.Partial("_HeaderLink")

            </div>
            <!-- left side bar for quick links ends -->
            <!-- right side bar for tracking details and feedback -->
            <div class="col-lg-9 col-md-9 col-sm-9 admincreateidbar">
                <hgroup>
                    <h4 style="font-weight: bolder;"><i class="fa fa-truck"></i> Register New Delivery</h4>
                </hgroup>
                <div class="error_detect"> </div>
                <form class="panel panel-group createtrackid" action="" method="post">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="First Name of Shipper" name="shipper_fname" required />
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Last Name of Shipper" name="shipper_lname" class="text-field input-style" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Phone Number of Shipper" name="shipper_phone" class="text-field input-style" required />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="text" placeholder="Country Name of Shipper" name="shipper_country" class="text-field input-style" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Receiver's First Name" name="receiver_fname" required />
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Receiver's Last Name" name="receiver_lname" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Receiver's Phone Number" name="receiver_phone" required />
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Receiver's Email" name="receiver_email" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Receiver's Country Name" name="receiver_country" required />
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Tracking Number (E.g 625255283)" name="tracking_no" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Description (E,g Box)" name="description" required />
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Weight (E.g 5kg)" name="weight" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Invoice Number" name="invoice_no" required />
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Booking Mode (E.g Paid)" name="booking_mode" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Total Freight (E.g $950)" name="total_freight" required />
                        </div>
                        <div class="form-group col-md-6">
                            <select class="form-control" name="delivery_mode">
                                <option value="">Delivery Mode</option>
                                <option value="Air">Air</option>
                                <option value="Road">Road</option>
                                <option value="Sea">Sea</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Pick Up Date (E.g 11/08/2018)" name="pickup_date" required />
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Pickup Time (E.g 8:30PM GMT)" name="pickup_time" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Status (E.g In Transit)" name="delivery_status" required />
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Comment (E.g In Progress)" name="comment" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <textarea class="form-control" rows="3" type="text" placeholder="Receiver's Address" name="receiver_address" required></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-primary" id="quote-btn" name="submitCredentials" type="submit" class="theme-btn"><i class="fa fa-paper-plane"></i>Register</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>



    </div>

    <!-- right sidebar tracking details and feedback ends-->
</div>